                                        "properties": {
                                            "status": {
                                                "enum": [403]
                                            },
                                            "title": {
                                                "enum": ["403 Forbidden"]
                                            },
                                            "detail": {
                                                "type": "string"
                                            }
                                        }
                                    }
                                }
                            }
